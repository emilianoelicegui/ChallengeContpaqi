<link href="~/lib/datatables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
<div class="container">
    
    <div class="row">
        <div class="offset-9 col-3 mb-3">
            <button type="button" id="showFilters" class="btn btn-primary mx-auto">
                Mostrar Busqueda
            </button>
            <button type="button" id="hideFilters" class="btn btn-secondary mx-auto" style="display: none;">
                Ocultar Busqueda
            </button>
            <a href="/Employee/AddOrUpdate" class="btn btn-secondary mx-auto">
                Crear Empleado
            </a>
        </div>
    </div>

    <div class="row">
        <div style="width:90%; margin:0 auto;">
            <div id="divFilters" class="row mb-3" style="display: none;">
                <div class="col-md-3">
                    <input type="text" id="NameFilter" class="form-control" placeholder="Nombre" />
                </div>
                <div class="col-md-3">
                    <input type="text" id="RfcFilter" class="form-control" placeholder="RFC" />
                </div>
                <div class="col-md-3">
                    <select id="StatusFilter" class="form-control">
                        <option value="0">Activo</option>
                        <option value="1">Inactivo</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <button id="btnFilter" class="btn btn-primary">Filtrar</button>
                    <button id="btnClear" class="btn btn-secondary">Limpiar Filtros</button>
                </div>
            </div>
            <table id="employeeTable" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Nombre Completo</th>
                        <th>Email</th>
                        <th>Posición</th>
                        <th>Rfc</th>
                        <th>Fecha Alta</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
    
</div>

@section Scripts
    {
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/js/employee/employeeDatatable.js"></script>
}